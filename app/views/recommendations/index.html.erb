<div class="page-header">
  <h1>
    Recommendations
    <a href="/recommendations/new" class="btn btn-lg btn-success">New Recommendation</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Sender</th>
        <th>Trip</th>
        <th>Body</th>
        <th>Category</th>
        <th>Actions</th>
      </tr>

      <% @recommendations.each do |recommendation| %>
      <tr>
        <td>
          <% if recommendation.sender.present? %>
            <a href="/users/<%= recommendation.sender.id %>">
              <%= recommendation.sender.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if recommendation.trip.present? %>
            <a href="/kwest_trips/<%= recommendation.trip.id %>">
              <%= recommendation.trip.trip_name %>
            </a>
          <% end %>
        </td>
        <td><%= recommendation.body %></td>
        <td><%= recommendation.category %></td>
        <td>
          <a href="/recommendations/<%= recommendation.id %>" class="btn btn-primary">Show</a>
          <a href="/recommendations/<%= recommendation.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_recommendation/<%= recommendation.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @recommendations, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
