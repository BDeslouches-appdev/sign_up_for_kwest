<div class="page-header">
  <h3>Recommendation #<%= @recommendation.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Sender</dt>
      <dd>
        <% if @recommendation.sender.present? %>
          <a href="/users/<%= @recommendation.sender_id %>">
            <%= @recommendation.sender.email %>
          </a>
        <% end %>
      </dd>

      <dt>Trip</dt>
      <dd>
        <% if @recommendation.trip.present? %>
          <a href="/kwest_trips/<%= @recommendation.trip_id %>">
            <%= @recommendation.trip.trip_name %>
          </a>
        <% end %>
      </dd>

      <dt>Body</dt>
      <dd><%= @recommendation.body %></dd>

      <dt>Category</dt>
      <dd><%= @recommendation.category %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/recommendations" class="btn btn-primary">
        Back
      </a>
      <a href="/recommendations/<%= @recommendation.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_recommendation/<%= @recommendation.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
