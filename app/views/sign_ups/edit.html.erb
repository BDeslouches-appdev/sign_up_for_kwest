<!-- Validation failure messages -->
<% if @sign_up.errors.any? %>
  <% @sign_up.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Sign Up #<%= @sign_up.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_sign_up/<%= @sign_up.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for kwestee_id -->
      <div class="form-group">
        <label for="kwestee_id" class="control-label">
          Kwestee
        </label>

        <input type="text" id="kwestee_id" name="kwestee_id" placeholder="Kwestee" class="form-control" value="<%= @sign_up.kwestee_id %>">
      </div>

      <!-- Label and input for trip_id -->
      <div class="form-group">
        <label for="trip_id" class="control-label">
          Trip
        </label>

        <input type="text" id="trip_id" name="trip_id" placeholder="Trip" class="form-control" value="<%= @sign_up.trip_id %>">
      </div>

      <button class="btn btn-warning">
        Update Sign Up
      </button>
      or
      <a href="/sign_ups/<%= @sign_up.id %>">Cancel</a>
    </form>
  </div>
</div>
